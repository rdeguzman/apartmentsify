<div class="panel panel-default">
  <div class="panel-heading">
    <span class="main-title">My Properties</span>
    <%= link_to "Add Property", new_property_path, class: "btn btn-primary pull-right" %>
  </div>
</div>

<div id="properties" class="row">
  <div class="list-group">

    <% @properties.each do |p| %>

      <div class="item col-xs-4 col-lg-4">
        <div class="thumbnail">

          <%= image_tag p.photos.first.image.url(), class: "list-group-image", alt: "" %>

          <div class="caption">

            <h4 class="list-group-item-heading"><%= p.address %>, <%= p.suburb %></h4>

            <p class="list-group-item-text">
              <%= truncate(p.description, length: 180, separator: ' ') %>
            </p>

            <br/>

            <div class="row">

              <div class="col-xs-12 col-md-6">
                <p class="lead"><%= p.weekly_rent_formatted %></p>
              </div>

              <div class="col-xs-12 col-md-6">
                <%= link_to "More Info", property_path(p.id), class:"btn btn-success" %>
              </div>

            </div>

          </div>
        </div>
      </div>

    <% end %>

  </div>
</div>