<div class="row">
  <div class="col-md-4 col-md-offset-2 text-center">

    <h2>Register</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/error_message' %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true,
                          :class => "form-control", :placeholder => "Full Name" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true,
                          :class => "form-control", :placeholder => "Email" %>
      </div>

      <div class="form-group">
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />

        <%= f.password_field :password, autocomplete: "off",
                             :class => "form-control", :placeholder => "Password" %>
      </div>

      <div class="form-group">

        <%= f.password_field :password_confirmation, autocomplete: "off",
                             :class => "form-control", :placeholder => "Password Confirmation"%>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", :class => "btn btn-primary btn-lg" %>

      </div>
    <% end %>

  </div>

  <div class="col-md-4 text-center">
    <br/>
    <br/>
    <br/>

    <ul class="list-group">
      <li class="list-group-item"><%= link_to 'Sign Up with Facebook', user_omniauth_authorize_path(:facebook), class: 'btn btn-primary' %></li>
      <li class="list-group-item"><%= link_to 'Sign Up with Google', user_omniauth_authorize_path(:facebook), class: 'btn btn-primary' %></li>
      <li class="list-group-item"><%= link_to 'Sign Up with Twitter', user_omniauth_authorize_path(:facebook), class: 'btn btn-primary' %></li>
    </ul>

  </div>

</div>