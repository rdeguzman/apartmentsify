<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Your Property</h3>
  </div>
  <div class="panel-body">

    <%= render 'shared/error_message', resource: @property %>

    <%= form_for @property, html: {multipart: true} do |f| %>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label>Property Type</label>
            <%= f.select :property_type,
                         [["Apartment", "Apartment"], ["Unit", "Unit"]],
                         {
                           id: 'property_type',
                           prompt: 'Select...',
                         },
                         { class: 'form-control' } %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label>Weekly Rent</label>
            <div class="input-group">
              <div class="input-group-addon">$</div>
              <%= f.text_field :weekly_rent, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <label>
            <%= f.check_box :active %> Active
          </label>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label>Address</label>
            <%= f.text_field :address,
                             placeholder: 'Greenlaw Crescent',
                             class: 'form-control' %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <label>Suburb</label>
            <%= f.text_field :suburb,
                             placeholder: 'Berwick',
                             class: 'form-control' %>
          </div>
        </div>

        <div class="col-md-2">
          <div class="form-group">
            <label>State</label>
            <%= f.select :state,
                         [["QLD", "QLD"],["NSW", "NSW"], ["SA", "SA"], ["TAS", "TAS"], ["VIC", "VIC"], ["WA", "WA"]],
                         {
                           id: 'state',
                           prompt: 'Select...'
                         },
                         { class: 'form-control' } %>
          </div>
        </div>

        <div class="col-md-2">
          <div class="form-group">
            <label>Postcode</label>
            <%= f.text_field :postcode,
                             placeholder: '3000',
                             class: 'form-control' %>
          </div>
        </div>

      </div>

      <div class="row">
        <div class="col-md-4 select">
          <div class="form-group">
            <label>Bedrooms</label>
            <%= f.select :bedrooms,
                         [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                         { prompt: 'Select...' },
                         { class: 'form-control' } %>
          </div>
        </div>

        <div class="col-md-4 select">
          <div class="form-group">
            <label>Bathrooms</label>
            <%= f.select :bathrooms,
                         [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                         { prompt: 'Select...' },
                         { class: 'form-control' } %>
          </div>
        </div>

        <div class="col-md-4 select">
          <div class="form-group">
            <label>Car Spaces</label>
            <%= f.select :car_spaces,
                         [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                         { prompt: 'Select...' },
                         { class: 'form-control' } %>
          </div>
        </div>

      </div>

      <div class="row">
        <div class="col-md-10">
          <div class="form-group">
            <label>Description</label>
            <%= f.text_area :description,
                            {
                              rows: 5,
                              placeholder: 'Tell about your property',
                              class: 'form-control' } %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <span class="btn btn-default btn-file">
                <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos
                <%= file_field_tag "images[]", type: :file, multiple: true %>
            </span>
          </div>
        </div>
      </div>

      <div id="photos"><%= render 'photos/form' %></div>


      <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
      </div>

    <% end %>

  </div>

</div>